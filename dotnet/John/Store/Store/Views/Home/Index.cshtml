@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home</title>
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css" />
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
</head>
<body>
    <script>
        var albums = [];
        @foreach(var album in ViewBag.albums)
        {
            @:albums.push(@Html.Raw(Json.Encode(album)));
            @:albums[albums.length - 1].ReleaseDate = '@album.ReleaseDate.ToString("dd-MM-yyyy")';
                }
    </script>

    <div class="container">
        <p>Winkel - The Album of Music</p>
    </div>
    <div class="container" ng-app="store" ng-controller="StoreController">
        <table class="table table-bordered ">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Artist</th>
                    <th>Prijs</th>
                    <th> Release datum</th>
                    <th>Koop</th>
                </tr>
            </thead>
            <tbody>

                @for (int i = 0; i < ViewBag.albums.Count; ++i)
                {
                    var album = ViewBag.albums[i];
                    <text>
                        <tr>
                            <td>@album.Title</td>
                            <td>@album.Artist</td>
                            <td>&euro; @album.Price</td>
                            <td>@album.ReleaseDate.ToString("dd-MM-yyyy")</td>
                            <td><button class="btn btn-default" ng-click="addProduct(@i)">Bestel maar!</button></td>
                        </tr></text>
                }

            </tbody>
        </table>

        <p>Winkelwagen - total price:  {{ totalPrice() | currency : '€ ' }}</p>

        <table class="table table-condensed table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Artist</th>
                    <th>Prijs</th>
                    <th> Release datum</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="product in products">
                    <td>{{ product.title }}</td>
                    <td>{{ product.artist }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.releaseDate | date }}</td>
                </tr>

            </tbody>
        </table>

    </div>



    <script>
        angular.module('store', []).controller('StoreController',
            function ($scope, $http) {

                $scope.products = [];

                $scope.addProduct = function (i) {
                    $scope.products.push({
                        title: albums[i].Title,
                        artist: albums[i].Artist,
                        price: albums[i].Price,
                        releaseDate: new Date(albums[i].ReleaseDate),
                    });

                };

                $scope.totalPrice = function () {
                    var totalPrice = 0;
                    for (var i = 0; i < $scope.products.length; i++) {
                        totalPrice += $scope.products[i].price;
                    }
                    return totalPrice;
                };

            })
    </script>
</body>
</html>
